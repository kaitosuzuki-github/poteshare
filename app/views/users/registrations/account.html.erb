<div class="user-area">
  <div class="user-nav">
    <div class="user-nav-inner">
      <ul>
        <li class="active"><%= link_to 'アカウント', users_account_path %></li>
        <li><%= link_to 'プロフィール', users_profile_path %></li>
        <li><%= link_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当にアカウントを削除しますか？" }, method: :delete, class: "account-delete" %></li>
      </ul>
    </div>
  </div>
  <div class="user-view-area">
    <div class="user-field">
      <div class="user-field-inner">
        <h3>アカウント</h3>
        <div class="field">
          <label for="email">メールアドレス</label>
          <div class="user-info"><%= current_user.email %></div>
        </div>
        <div class="field">
          <label for="password">パスワード</label>
          <div class="user-info">＊＊＊＊＊＊＊＊</div>
        </div>
        <div class="account">
          <%= link_to '編集', edit_user_registration_path, class: "btn" %>
        </div>
      </div>
    </div>
  </div>
</div>

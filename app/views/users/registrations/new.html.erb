<div class="user-area">
  <div class="user-field">
    <div class="user-field-inner">
      <h3>新しいアカウントを作成</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="field">
          <p>必須</p>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名", class: "form-input" %>
        </div>

        <div class="field">
          <p>必須</p>
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "form-input" %>
        </div>

        <div class="field">
          <p>必須</p>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-input" %>
        </div>

        <div class="field">
          <p>必須</p>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "form-input" %>
        </div>

        <div class="actions">
          <%= f.submit "新しいアカウントを作成", class: "btn" %>
        </div>
      <% end %>

      <div class="render">
        <%= render "users/shared/links"  %>
      </div>
    </div>
  </div>
</div>
